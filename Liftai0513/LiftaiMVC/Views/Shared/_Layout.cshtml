<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Kauno Liftai</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @if (HttpContext.Current.Session["Type"].ToString() == "Admin")
                {
                    @Html.ActionLink("Kauno Liftai", "IndexAdministrator", "Home", new { area = "" }, new { @class = "navbar-brand" })
                }
                @if (HttpContext.Current.Session["Type"].ToString() == "Operator")
                {
                    @Html.ActionLink("Kauno Liftai", "IndexOperator", "Home", new { area = "" }, new { @class = "navbar-brand" })
                }
                @if (HttpContext.Current.Session["Type"].ToString() == "Handyman")
                {
                    @Html.ActionLink("Kauno Liftai", "IndexHandyman", "Home", new { area = "" }, new { @class = "navbar-brand" })
                }
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Liftai", "ElevatorsList", "Elevators")</li>
                    <li>@Html.ActionLink("Pastatai", "BuildingsList", "Buildings")</li>
                    <li>@Html.ActionLink("Atsijungti", "Login", "Home")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
    </div>
    <div class="footer container">
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Kauno Liftai</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
